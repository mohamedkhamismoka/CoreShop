
@{
    ViewData["Title"] = "Details";
}
@model ProductVM
@section style{
    <link href="~//assets/css/StyleSheet.css" rel="stylesheet" />
    <link href="../assets/css/Customer.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/Customer.css" />
    <style>
        h1 {
            text-align: center;
            margin-top: 30px;
            color: red;
        }

        form {
            width: 500px;
            position: absolute;
            left: 50%;
            transform: translate(-50%,0)
        }

        .y {
            position: relative;
            margin-left: 10px;
            width: 310px
        }
     
  
     
    </style>
}
<center>
    <h1 style="margin-top:100px;">Product Details</h1>
</center>
<form  asp-controller="Product" asp-action="Delete" method="post">
     <div class="form-group">
        <label class="lb" asp-for="Id">ID</label>
        <input type="Text" class="form-control"  placeholder="Enter Name" asp-for="Id" readonly>
        
    </div>
    <div class="form-group">
        <label class="lb" asp-for="Name">Name</label>
        <input type="Text" class="form-control" id="name" placeholder="Enter Name" asp-for="Name" disabled>
        <span asp-validation-for="Name" class="text-danger font-weight-bold"></span>
    </div>
    <div class="form-group">
        <label  class="lb" asp-for="price">price</label>
        <input type="Text" class="form-control" id="address" placeholder="Enter Address" asp-for="price" disabled>
        <span asp-validation-for="price" class="text-danger font-weight-bold"></span>
    </div>
    <div class="form-group">
    <label class="lb"> Current BarCode </label> <br />
  <img src="~/assets/files/BarCodes/@Model.barcode"  class="img-thumbnail" width="120" height="80" style="margin-left:10px;" >
          </div>


        <div class="form-group">
        <label  class="lb" asp-for="production_date">production date</label>
        <input type="date" class="form-control" id="phone" placeholder="Phone Number" asp-for="production_date" disabled>
        <span asp-validation-for="production_date" class="text-danger font-weight-bold"></span>
    </div>
    <div class="form-group">
        <label  class="lb" asp-for="expire_date"> expire_date</label>
        <input type="date"  class="form-control" id="mail" placeholder="Enter mail"  asp-for="expire_date" disabled>
        <span asp-validation-for="expire_date" class="text-danger font-weight-bold"></span>
    </div>
   
        <div class="form-group">
        <label  class="lb" asp-for="quantity"> quantity</label>
        <input type="text"  class="form-control" id="mail" placeholder="Enter mail"  asp-for="quantity" disabled>
        <span asp-validation-for="quantity" class="text-danger font-weight-bold" style="margin-right:10px;"></span>
        <span class="text-danger font-weight-bold">@ViewBag.warn </span>
    </div>
   
    <center>
  
        <a class="btn btn-pill btn-success" asp-controller="Customer" asp-action="Index">Back To Data</a>
       

    </center>
</form>
@section scripts{
    <script src="~/jquery/jquery.js"></script>
    <script src="~/jquery-validation/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}






