    <tr>
        <th>Customer Name</th>
         <th>Customer mail</th>
          <th>order Number</th>
          <th>Price</th>

    </tr>
</thead>
<tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.customername</td>
                   <td>@item.customerMAil</td>
                      <td>@item.ordernum</td>
                         <td>@item.totalPrice</td>
            </tr>
        }
    </tbody>
</table>
<div >
        <a class="btn btn-pill btn-primary y" asp-controller="status" asp-action="Index">Back</a>

</div>







